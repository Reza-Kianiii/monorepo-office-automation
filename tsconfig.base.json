{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": ".",
    "paths": {
      "@office-automation/dashboard-shell/feature/home": [
        "libs/dashboard-shell/feature/home/src/index.ts"
      ],
      "@office-automation/dashboard/data/menu": [
        "libs/dashboard/data/menu/src/index.ts"
      ],
      "@office-automation/dashboard/data/requesttest": [
        "libs/dashboard/data/requesttest/src/index.ts"
      ],
      "@office-automation/dashboard/feature/shell": [
        "libs/dashboard/feature/shell/src/index.ts"
      ],
      "@office-automation/dashboard/utils/redux-store": [
        "libs/dashboard/utils/redux-store/src/index.ts"
      ],
      "@office-automation/shared/ui/drawer": [
        "libs/shared/ui/drawer/src/index.ts"
      ]
    }
  }
}
